// this program is to check whether number you typed is even or odd using if else statement

#include<iostream>
using namespace std;

int main(){
    int n;

    cout << "Please type your number here: ";
    cin >> n;
    if (n % 2 == 0)
    {
        cout << n <<" "<<"is a even\n";
    }
    else{
        cout << n <<" "<<"is a odd\n";
    }
    
}

